<!DOCTYPE html>
<html>
    <head>
        <title>Book List</title>
        <link rel="stylesheet" href="/css/bootstrap.min.css">
    </head>
    <body class='container'>
        <h3>Book List</h1>
        <table class='table table-hover table-bordered'>
            <tr>
                <th>title</th>
                <th>description</th>
            </tr>
            {% for book in books %}
                <tr>
                    <td>{{ book.title }}</td>
                    <td>{{ book.desc }}</td>
                </tr>
            {% endfor %}
        </table>

        <h3>Add new Book</h3>
        <form action="/books" method="POST" style="width:400px;" id='frm-add_book'>
            <div class="form-group">
                <label for="ipt-title">Title</label>
                <input type="text" class="form-control" name="title" id="ipt-title">
            </div>
            <div class="form-group">
                <label for="ipt-desc">Desc</label>
                <input type="text" class="form-control" name="desc" id="ipt-desc">
            </div>
            <div class="form-group">
                <button class='btn btn-primary' id='btn-submit'>Submit</button>
            </div>
        </form>
        <script src="/js/jquery.js"></script>
        <script src="/js/bootstrap.min.js"></script>
        <script src="/js/books_index.js"></script>
    </body>
</html>